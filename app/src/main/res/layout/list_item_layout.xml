<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView6"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="38dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/txt_product_title"
        app:layout_constraintStart_toEndOf="@+id/txt_product_title">


        <ImageView
            android:id="@+id/image"
            android:layout_width="164dp"
            android:layout_height="168dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/hp2" />

        <TextView
            android:id="@+id/txt_company"
            android:layout_width="198dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="24dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt_product_title"
            app:layout_constraintEnd_toStartOf="@+id/price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price"
            android:layout_width="103dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="24dp"
            android:text="TextView"
            android:textColor="@color/Marron"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cart_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_company"
            app:layout_constraintTop_toBottomOf="@+id/image" />

        <TextView
            android:id="@+id/txt_product_title"
            android:layout_width="159dp"
            android:layout_height="37dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="9dp"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/profileEditTextColor"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cart_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_company" />

        <ImageView
            android:id="@+id/cart_icon"
            android:layout_width="102dp"
            android:layout_height="44dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/redcart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_product_title"
            app:layout_constraintTop_toBottomOf="@+id/price"
            app:tint="@color/red" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

